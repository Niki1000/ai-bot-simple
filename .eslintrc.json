{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-duplicate-case": "error",
    "curly": ["warn", "all"],
    "eqeqeq": ["warn", "always"],
    "no-var": "warn",
    "prefer-const": "warn"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "alert": "readonly",
    "console": "readonly"
  }
}
